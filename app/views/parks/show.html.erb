<div class="row">
  <div class="small-2 large-2 columns">
    <%= imdb_style_rating_for @trail, current_user%>
  </div>
  <br>
  <div class="small-2 large-4 columns">
    <% if current_user %>
      Accessibility: <%= rating_for @trail, "accessibility", enable_half: true, disable_after_rate: true, imdb_avg: true %>
      <br>
      Parking: <%= rating_for @trail, "parking", enable_half: true, disable_after_rate: true, imdb_avg: true %>
      <br>
      Overall Environment: <%= rating_for @trail, "environment", enable_half: true, disable_after_rate: true, imdb_avg: true %>
    <% end %>
  </div>
</div>