<%= form_for @activity do |f| %>
  <%= render "error" %>
  
  <strong><%= f.label "Select Activity" %><br></strong>
  <%= f.collection_select :activity, Activity.all, :id, :name %><br><br>
  <strong><%= f.label :accessible, "Is this activity accessible?" %></strong><br>
  <%= f.select :accessible, [["Yes", true], ["No", false]] %><br><br>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :state_id, value: @state %>
  <strong><%= f.label "Select City" %></strong><br>
  <%= f.collection_select :city_id, City.where(state_id: @state), :id, :name %><br><br>
  <%= f.submit %>

<% end %>